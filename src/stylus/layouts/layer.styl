// TIPS: must set layer-folder's height!
.layer-folder
  display: flex
  flex-direction: column
  position: relative
  width: 100%

  for index in (1..$layer-max-layer-count)
    &>.layer-{index}
      height: inherit
      position: absolute
      width: inherit
      z-index: index
