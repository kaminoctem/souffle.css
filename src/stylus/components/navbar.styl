$navbar-menu-item-forecolor ?= $color-grey-darker
$navbar-menu-item-backcolor ?= $color-white

/** style */
.navbar
  display: block
  &>.brand
    display: flex
    &>.left
      display: block
      flex-basis: 0
      flex-grow: 1
      flex-shrink: 1
      max-width: 100%
      margin: auto auto auto 0
      position: relative
      text-align: left
    &>.center
      display: block
      flex-basis: 0
      flex-grow: 1
      flex-shrink: 1
      max-width: 100%
      margin: auto
      position: relative
      text-align: center
    &>.right
      display: block
      flex-basis: 0
      flex-grow: 1
      flex-shrink: 1
      max-width: 100%
      margin: auto 0 auto auto
      position: relative
      text-align: right
    &>.left,
    &>.center,
    &>.right
      &>.item
        cursor: pointer
        display: block
  &>.menu
    display: none
    padding: 0.5em
    &.is-active
      display: block
    &>.item
      background-color: $navbar-menu-item-backcolor
      color: $navbar-menu-item-forecolor
      cursor: pointer
      display: flex
      flex-grow: 0
      flex-shrink: 0
      line-height: 1.5
      padding: .5rem .75rem
      position: relative
      &:hover,
      &.is-hovered
        background-color: darken($navbar-menu-item-backcolor, 5%)
        border-color: transparent
      &:focus,
      &.is-focused
        border-color: transparent
      &:active,
      &.is-active
        background-color: darken($navbar-menu-item-backcolor, 10%)
        border-color: transparent
      &[disabled],
      &.is-disabled
        background-color: $navbar-menu-item-backcolor
        border-color: transparent
        box-shadow: none
