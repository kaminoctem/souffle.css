/** style */
.modal
  align-items: center
  background-color: alpha($color-black, 0.7)
  display: none
  flex-direction: column
  height: 100vh
  justify-content: center
  left: 0
  overflow: hidden
  position: fixed
  top: 0
  width: 100vw
  z-index: $modal-z-index
  &.is-active
    display: flex
  &>.modal-content
    display: contents
    margin: auto
    max-height: 95vh
    max-width: 95vw
    margin: auto
    overflow-x: hidden
    overflow-y: auto
    width: 90%
    z-index: ($modal-z-index + 1)
