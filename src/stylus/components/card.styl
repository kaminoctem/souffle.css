/**
 * components/card.styl
 * @author kaminoctem
 */
.card
  background-color: $card-backcolor
  border-radius: 1rem
  box-shadow: 0px 0px 0.5rem 0.25rem $card-box-shadow-color
  color: $card-forecolor
  display: block
  margin: 1em
  padding: 1em
  width: fit-content
  &>.card-header,
  &>.card-body,
  &>.card-footer
    margin: auto
    &>.card-title
      font-size: $font-size-medium
      font-weight: $font-weight-semibold

  if (!$is-skeleton)
    for colorKey, colorValue in $colors
      &.is-{colorKey}
        background-color: colorValue.base
        border-color: transparent
        color: colorValue.inverted
