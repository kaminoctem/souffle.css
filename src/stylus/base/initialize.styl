/**
 * base/initialize.styl
 * @author kaminoctem
 */

/** variable */
$base-common-forecolor ?= var(--color-mainfore, $color-mainfore)
$base-common-font-family ?= $font-family-sans-serif
$base-common-font-size ?= $font-size-root
$base-html-backcolor ?= var(--color-mainback, $color-mainback)
$base-html-min-height ?= 180px
$base-html-min-width ?= 320px
$base-html-overflow-x ?= hidden
$base-html-overflow-y ?= scroll
$base-html-text-rendering ?= $text-rendering
$base-body-font-size ?= $font-size-root
$base-body-font-weight ?= $font-weight-normal
$base-body-line-height ?= 1.5

$a-forecolor ?= $color-grey-darker
$a-hover-forecolor ?= $color-grey-darker

$code-font-family ?= $font-family-monospace
$code-forecolor ?= var(--color-mainback, $color-mainback)
$code-backcolor ?= var(--color-mainfore, $color-mainfore)
$code-padding ?= 0.25em 0.5em 0.25em
$code-font-size ?= 0.875em
$code-font-weight ?= normal

$hr-backcolor ?= var(--color-mainback, $color-mainback)
$hr-height ?= 2px
$hr-margin ?= 1.5rem 0

$strong-forecolor ?= var(--color-mainfore, $color-mainfore)
$strong-font-weight ?= $font-weight-normal

$small-font-size ?= $font-size-small

$pre-forecolor ?= var(--color-mainback, $color-mainback)
$pre-backcolor ?= var(--color-mainfore, $color-mainfore)
$pre-font-size ?= 0.875em
$pre-padding ?= 1.25rem 1.5rem
$pre-padding ?= 1.25rem 1.5rem
$pre-code-font-size ?= 1em
$pre-code-forecolor ?= var(--color-mainback, $color-mainback)
$pre-code-backcolor ?= var(--color-mainfore, $color-mainfore)

/** style */
html
  background-color: $base-html-backcolor
  font-size: $base-common-font-size
  -moz-osx-font-smoothing: grayscale
  -webkit-font-smoothing: antialiased
  min-height: $base-html-min-height
  min-width: $base-html-min-width
  overflow-x: $base-html-overflow-x
  overflow-y: $base-html-overflow-y
  text-rendering: $base-html-text-rendering
  text-size-adjust: 100%

article,
aside,
figure,
footer,
header,
hgroup,
section
  display: block

body,
button,
input,
select,
textarea
  font-family: $base-common-font-family

code,
pre
  -moz-osx-font-smoothing: auto
  -webkit-font-smoothing: auto
  font-family: $code-font-family

body
  color: $base-common-forecolor
  font-size: $base-body-font-size
  font-weight: $base-body-font-weight
  line-height: $base-body-line-height

a
  color: $a-forecolor
  cursor: pointer
  text-decoration: none
  strong
    color: currentColor
  &:hover
    color: $a-hover-forecolor

code
  background-color: $code-backcolor
  color: $code-forecolor
  font-size: $code-font-size
  font-weight: $code-font-weight
  padding: $code-padding

hr
  background-color: $hr-backcolor
  border: none
  display: block
  height: $hr-height
  margin: $hr-margin

img
  height: auto
  max-width: 100%
  pointer-events: none

input[type="checkbox"],
input[type="radio"]
  vertical-align: baseline

small
  font-size: $small-font-size

span
  font-style: inherit
  font-weight: inherit

strong
  color: $strong-forecolor
  font-weight: $strong-font-weight

// Block

fieldset
  border: none

pre
  background-color: $pre-backcolor
  color: $pre-forecolor
  font-size: $pre-font-size
  overflow-x: auto
  padding: $pre-padding
  white-space: pre
  word-wrap: normal
  code
    background-color: $pre-code-backcolor
    color: $pre-code-forecolor
    font-size: $pre-code-font-size
    padding: 0

table
  td,
  th
    vertical-align: top
    &:not([align])
      text-align: left
  th
    color: $strong-forecolor

ruby
  font-size: 1em
  ruby-align: start
  ruby-position: space-around
  rt
    font-size: 0.5em
  rp
    font-size: 0.5em

canvas,
video
  display: block
  object-fit: contain
  object-position: 50% 50%
