// .root is deprecated
.souffle,.root
  background-color: var(--color-mainback, $color-mainback)
  color: var(--color-mainfore, $color-mainfore)
  display: block
  width: 100%
  &.is-header-fixed
    &>.header
      top: 0
      min-height: $root-is-header-fixed-height
      overflow: hidden
      position: fixed
      width: 100%
      z-index: $root-is-header-fixed-z-index
    &>.main
      padding-top: $root-is-header-fixed-height
    & .tategaki
      max-height: "calc(100vh - %s)" % ($root-is-header-fixed-height)

  &.is-footer-fixed
    &>.main
      padding-bottom: $root-is-footer-fixed-height
    &>.footer
      bottom: 0
      height: $root-is-footer-fixed-height
      overflow: hidden
      position: fixed
      width: 100%
      z-index: $root-is-footer-fixed-z-index
    & .tategaki
      max-height: "calc(100vh - %s)" % ($root-is-footer-fixed-height)
  &.is-header-fixed.is-footer-fixed
    & .tategaki
      max-height: "calc(100vh - %s - %s)" % ($root-is-header-fixed-height $root-is-footer-fixed-height)


