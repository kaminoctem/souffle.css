 * @author kaminoctem
 */

.textarea
  @extend.control
  background-color: $textarea-backcolor
  border: $textarea-border-width solid $textarea-border-color
  border-radius: $textarea-border-radius
  color: $textarea-forecolor
  display: block
  justify-content: flex-start
  margin: 0.25rem 0
  max-width: 100%
  min-height: 2.25rem
  padding: 0.25rem
  resize: vertical
  width: 100%
