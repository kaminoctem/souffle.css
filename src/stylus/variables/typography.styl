$font-family-sans-serif ?= BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif, "Segoe UI Emoji", "Segoe UI Symbol", "Apple Color Emoji", "Noto Color Emoji", "Noto Emoji"
$font-family-monospace ?= "Inconsolata", "Source Code Pro", "Fira Code", "Roboto Mono", "Monaco", "Consolas"
$text-rendering ?= optimizeLegibility

$font-size-root ?= 16px
$font-size-small ?= 0.75em
$font-size-normal ?= 1em
$font-size-medium ?= 1.25em
$font-size-large ?= 1.5em

$font-weight-light ?= 300
$font-weight-normal ?= 400
$font-weight-medium ?= 500
$font-weight-semibold ?= 600
$font-weight-bold ?= 700
